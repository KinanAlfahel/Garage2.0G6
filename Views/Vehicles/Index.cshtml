@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Lexicon Garage</h1>
</div>
<br />

@if (TempData["Success"] != null)
{
    <div class="text-center text-success">
        <p>@TempData["Success"].ToString()</p>
    </div>
}

@if (TempData["EditSuccess"] != null)
{
    <div class="text-center text-success">
        <p>@TempData["EditSuccess"].ToString()</p>
    </div>
}

@if (TempData["CollectSuccess"] != null)
{
    <div class="text-center text-success">
        <p>@TempData["CollectSuccess"].ToString()</p>
    </div>
}

<div class="index-options text-center">
    <h5 class="garage-info mb-3">Do you want to park or collect a vehicle?</h5>
    <button class="btn btn-primary btn-lg" onclick="window.location.href='/Vehicles/Create'">Park</button>
    &nbsp;
    <button class="btn btn-primary btn-lg" onclick="window.location.href='/Vehicles/Index2'">Collect</button>
</div>
