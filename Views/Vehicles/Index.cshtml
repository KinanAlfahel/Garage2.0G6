@model Garage2._0G6.Models.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Lexicon Garage</h1>
</div>
<br />

<div class="text-center">
    <font class="m-3"><span class="font-weight-bold">Current free spaces:</span> @Model.FreeSpaces</font>
</div>
<br />

@if (TempData["Success"] != null)
{
    <div class="index-options text-center text-success" id="threeSeconds">
        <H1>@TempData["Success"].ToString()</H1>
    </div>
}
