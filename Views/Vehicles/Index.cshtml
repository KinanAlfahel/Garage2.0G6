<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 md-1">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <button class="btn btn-primary btn-lg" onclick="window.location.href='/Vehicles/Create'"><h1 class="my-0 font-weight-normal">Park</h1></button>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title pricing-card-title">1 credits <small class="text-muted">/ min</small></h4>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Register and Park</li>
                        </ul>
                        <i class="fa fa-car fa-5x"></i>
                    </div>
                </div>
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <button class="btn btn-primary btn-lg" onclick="window.location.href='/Vehicles/Index2'"><h1 class="my-0 font-weight-normal">Collect</h1></button>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Search and Collect your Vehicle</li>
                            <li>(Edit your Vehicle details)</li>
                        </ul>
                        <i class="fa fa-eject fa-5x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

